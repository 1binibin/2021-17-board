<%- include('../inc/head',{ css })%>
<%- include('../inc/header')%>
<script src="/js/promise.polyfill.min.js"></script>
<script src="/js/axios.min.js"></script>
<section class="write-wrapper wrapper">
	<%- include('../inc/title-bar')%>
	<!-- 본문내용 -->
	<form action="/<%= LANG %>/board" method="POST" name="saveForm" enctype="multipart/form-data">
		<input type="hidden" name="_method" value="PUT">
		<input type="hidden" name="id" >
		<table class="write-tbl">
			<tbody>
				<tr>
					<td class="title require"><%= FIELD.TITLE%></td>
					<td class="content">
						<input type="text" name="title" class="form-control" placeholder="<%= FIELD.TITLE%>" autofocus value="<%= board ? board.title : '' %>">
					</td>
				</tr>
				<tr>
					<td class="title"><%= FIELD.WRITER%></td>
					<td class="content">
						<input type="text" name="writer" class="form-control" placeholder="<%= FIELD.WRITER%>" value="<%= board ? board.writer :'' %>">
					</td>
				</tr>
				<tr>
					<td class="title"><%= FIELD.CONTENT%></td>
					<td class="content">
						<textarea name="content" class="form-control" placeholder="<%= FIELD.CONTENT%>"><%= board ? board.content : '' %></textarea>
					</td>
				</tr>
				<tr>
					<td class="title"><%= FIELD.UPFILE%></td>
					<td class="content">
						<% if(board) { %>
							<div class="file-wrap">
								<img src="<%= board.savename %>" alt="<%= board.realname %>" class="img">
								<div class="file"><%= board.realname %></div>
								<button type="button" class="btn btn-sm btn-danger" data-idx="<%= board.id %>" id="btRemove">삭제</button>
							</div>
							<% } %> 
						<input type="file" name="upfile" class="form-control-file">
					</td>
				</tr>
			</tbody>
		</table>
		<div class="btn-wrap p-3 text-center">
			<button class="btn btn-success" id="btSave"><%= BT.CREATE%></button>
			<button class="btn btn-danger" type="reset"><%= BT.RESET%></button>
		</div>
	</form>
</section>
<%- include('../inc/foot.ejs', { js }) %> 