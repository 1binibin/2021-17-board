<%- include('../inc/head', { css })%>
<%- include('../inc/header')%>
<section class="view-wrapper wrapper">
	<%- include('../inc/title-bar')%>
	<!-- 본문내용 -->
<table class="view-tbl">
	<tbody>
		<tr>
			<td class="title"><%= FIELD.TITLE%></td>
			<td class="content"><%= board.title %></td>
		</tr>
		<tr>
			<td class="title"><%= FIELD.WRITER%></td>
			<td class="content"><%= board.writer %></td>
		</tr>
		<tr>
			<td class="title"><%= FIELD.DATE%></td>
			<td class="content"><%= board.createdAt %></td>
		</tr>
		<tr>
			<td class="title"><%= FIELD.READCOUNT%></td>
			<td class="content"><%= board.viewCount %></td>
		</tr>
		<tr class="content-tr">
			<td class="title"><%= FIELD.CONTENT%></td>
			<td class="content"><%= board.content %></td>
		</tr>
		<tr>
			<td class="title"><%= FIELD.UPFILE%></td>
			<td class="content">
				<% if(board.savename) { %>
					<img src="<%= board.savename %>" alt="<%= board.realname %>" class="file-img">
					<% } else{ %>
				<img src="https://via.placeholder.com/120x160" alt="첨부파일" class="file-img">
						<% } %>
				<a href="#" class="my-2 d-block"><%= board.realname%></a>
			</td>
		</tr>
	</tbody>
</table>
<div class="btn-wrap py-3 d-flex">
	<a href="/<%= LANG %>/board" class="btn btn-primary"><%= BT.LIST%></a>
	<button class="btn btn-success ml-auto mr-1" id="btUpdate" data-id="<%= board.id%>" data-lang="<%= LANG %>"><%= BT.UPDATE%></button>
	<button class="btn btn-danger" id="btDelete"><%= BT.DELETE%></button>
</div>

<%- include('../inc/comment')%>
<%- include('../inc/foot', { js })%>